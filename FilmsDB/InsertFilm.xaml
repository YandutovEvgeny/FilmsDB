<Window x:Class="FilmsDB.InsertFilm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilmsDB"
        mc:Ignorable="d"
        Title="InsertFilm" Height="544.5" Width="276.5">
    <Grid>
        <StackPanel Margin="20">
            <Label FontSize="20" HorizontalAlignment="Center">Название фильма</Label>
            <TextBox x:Name="TBFilmName" FontSize="20"></TextBox>
            <Label FontSize="20" HorizontalAlignment="Center">Аннотация</Label>
            <TextBox x:Name="TBAnnotation" FontSize="20"></TextBox>
            <Image x:Name="IPoster" Height="200"></Image>
            <Button FontSize="20" Click="Button_Click">Добавить картинку</Button>
            <Label FontSize="20" HorizontalAlignment="Center">Статус</Label>
            <ComboBox x:Name="CBStatus" FontSize="20"></ComboBox>
            <Button FontSize="20" Click="Button_Click_1">Добавить</Button>
        </StackPanel>
    </Grid>
</Window>
